<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <!-- 订单---S--- -->
                <navigator url="../orderdetail/orderdetail?id={{item.id}}" class="weui-cells weui-cells_after-title orderlist" wx:for="{{orderlist}}" wx:key="id">
                  <view class="weui-flex orderstoreinfo">
                    <view class="weui-flex__item"> <image class="storeimg" src="{{item.store.logo}}"></image> {{item.store.name}}</view>
                    <view class="weui-flex__item primary orderstate">{{item.orderstate}}</view>
                  </view>
                  <view class="weui-flex orderprd_list" wx:for="{{item.orderprdlist}}" wx:key="skuid" wx:for-index="idx" wx:for-item="prd">
                    <view class="weui-flex__item orderprd_name">{{prd.name}}</view>
                    <view class="orderprd_price">￥{{prd.price}}</view>
                    <view class="orderprd_num" wx:if="{{prd.num}}">x{{prd.num}}</view>
                  </view>
                  <view class="weui-flex orderprd_list" style="color:#333">
                    <view class="weui-flex__item">共{{item.total_num}}份</view>
                    <view class="">合计：￥{{item.total_fee}}</view>
                  </view>
                  <view class="order_paybtn" hidden="{{activeIndex != 0}}">
                    <button class="weui-btn mini-btn" type="default" size="mini">去买单</button>
                  </view>
                </navigator>
                <!-- 订单---E--- -->
                <!-- <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                  
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">已完成</view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">所有</view> -->
            </view>
        </view>
    </view>
</view>

<navigator url="../prdlist/prdlist" class="orderfood bg_liner_orange">
    <view class="orderfood_icon"><image src="../../images/orderfood.png"></image></view>
</navigator>

