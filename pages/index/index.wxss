/* pages/index/index.wxss */
.page{
  background: #fff;
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
}
.userinfo_bg{
  background: #ff5000;
  padding:80rpx 0 120rpx;
  border-bottom-left-radius:50%;
  border-bottom-right-radius:50%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.user_scan {
  margin-top: 60px;
  text-align: center;
  font-size: 32rpx;
}
.scan_box{
  background: #ff5000;
  border-radius: 100%;
  width: 188rpx;
  height: 188rpx;
  margin: 0 auto 40rpx;
  padding: 44rpx;
  box-sizing: border-box;
}
.scan_box image{width:100%;height: 100%;}
.user-motto{opacity: 0.5;font-size: 24rpx;margin-top: 10rpx;}